<h1><%= @category.name %>, <%= @start_date.strftime("%B %Y") %></h1>

<table>
  <tr>
    <th>Amount</th>
    <th>Date</th>
    <th>Description</th>
  </tr>
  <% @transactions.each do |transaction| %>
    <tr>
      <td style="text-align: right; padding-right: 20px">
        <%= transaction[:amount] %>
      </td>
      <td><%= transaction[:date] %></td>
      <td><%= transaction[:description] %></td>
    </tr>
  <% end %>
</table>
